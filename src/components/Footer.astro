---
import Mail from "./ui/Mail.astro";
import Phone from "./ui/Phone.astro";
import Pin from "./ui/Pin.astro";
// import TresLineas from "../assets/tresLineas.png";
// import WQ from "../assets/WQ.png";
import { items } from "@lib/categories";
---

<footer class="bg-bgDrAguaDark">
  <div class="flex lg:flex-row flex-col justify-center items-center">
    <div class="w-1/6"></div>
    <div
      class="flex flex-col gap-y-10 lg:w-1/3 w-3/4 justify-center items-start lg:pl-10 pl-0 lg:mt-0 mt-10"
    >
      <div class="flex flex-col gap-y-4">
        <h1
          style="color: var(--Pale-Color, #F2F6FF);
font-size: 20px;
font-style: normal;
font-weight: 400;
line-height: normal;
letter-spacing: 4px;"
        >
          CONTACTO
        </h1>
        <div class="flex flex-col gap-y-2">
          <div class="flex flex-row gap-2 items-center">
            <Mail class="text-[#93A0BC]" />
            <a
              href="mailto:ventas@doctoragua.com.ar"
              class="text-[#93A0BC]"
              style="
font-size: 16px;
font-style: normal;
font-weight: 400;
line-height: normal;"
            >
              ventas@doctoragua.com.ar
            </a>
          </div>
          <div class="flex flex-row gap-2 items-center">
            <Phone class="text-[#93A0BC]" />
            <p
              class="text-[#93A0BC]"
              style="
            font-size: 16px;
            font-style: normal;
            font-weight: 400;
            line-height: normal;"
            >
              +54 911 5141 5797
            </p>
          </div>
          <div class="flex flex-row gap-2">
            <Pin class="text-[#93A0BC]" />
            <p
              class="text-[#93A0BC]"
              style="
            font-size: 16px;
            font-style: normal;
            font-weight: 400;
            line-height: normal;"
            >
              Avenida corrientes 2365
            </p>
          </div>
        </div>
      </div>
      <div class="flex flex-col gap-y-4">
        <h1
          class="text-[#F2F6FF]"
          style="color: var(--Pale-Color, #F2F6FF);
font-size: 20px;
font-style: normal;
font-weight: 400;
line-height: normal;
letter-spacing: 4px;"
        >
          DE OPERACIÓN
        </h1>
        <div class="flex flex-col gap-y-2">
          <p
            class="text-[#93A0BC]"
            style="
          font-size: 16px;
          font-style: normal;
          font-weight: 400;
          line-height: normal;"
          >
            lunes a jueves de 9-17hs
            viernes de 9-15hs
          </p>
          <p
            class="text-[#93A0BC]"
            style="
          font-size: 16px;
          font-style: normal;
          font-weight: 400;
          line-height: normal;"
          >
            Viernes de 9-15hs
          </p>
          <p
            class="text-[#93A0BC]"
            style="
          font-size: 16px;
          font-style: normal;
          font-weight: 400;
          line-height: normal;"
          >
            Sábado y Domingo: Cerrado
          </p>
        </div>
      </div>
    </div>
    <div class="lg:w-1/3 w-3/4 flex flex-col gap-y-4 mt-[85px]">
      <h1
        class="text-[#F2F6FF]"
        style="color: var(--Pale-Color, #F2F6FF);
font-size: 20px;
font-style: normal;
font-weight: 400;
line-height: normal;
letter-spacing: 4px;"
      >
        CATEGORÍAS DE PRODUCTOS
      </h1>
      <div class="flex flex-row gap-10">
        <div class="flex flex-col gap-2 w-1/2">
          {
            items.slice(0, Math.ceil(items.length / 2)).map((item) => (
              <a
                class="text-[#93A0BC] hover:text-white transition-colors"
                href={`/categorias/${item.nombre}`}
                style="
        font-size: 13px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;"
              >
                {item.nombre}
              </a>
            ))
          }
        </div>
        <div class="flex flex-col gap-2 w-1/2">
          {
            items.slice(Math.ceil(items.length / 2)).map((item) => (
              <a
                class="text-[#93A0BC] hover:text-white transition-colors"
                href={`/categorias/${item.nombre}`}
                style="
        font-size: 13px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;"
              >
                {item.nombre}
              </a>
            ))
          }
        </div>
      </div>
    </div>
    <div class="w-1/6"></div>
  </div>
  <div
    class="text-[#445A8B] flex justify-center items-center p-10"
    style="color: var(--Others-Color, #445A8B);
font-size: 12px;
font-style: normal;
font-weight: 400;
line-height: normal;"
  >
    © 2025 Doctor Agua. Todos los derechos reservados.
  </div>
</footer>
